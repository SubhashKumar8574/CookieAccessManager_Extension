{
  "manifest_version": 3,
  "name": "Cookie Info Overlay",
  "description": "Shows page info and cookies with runtime permissions.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "optional_permissions": ["cookies"],
  "optional_host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Cookie Info Overlay",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["ui/overlay.css"]
    }
  ]
}
